Options -Indexes -MultiViews
DirectoryIndex index.html

<IfModule mod_rewrite.c>
  RewriteEngine On

  # 1) Block Sphinx/phpMyAdmin artifacts FIRST
  RewriteRule ^(genindex\.html|intro\.html|search\.html)$ - [R=404,L]
  RewriteRule ^(_static|_sources|_images|_modules|_downloads)(/|$) - [R=404,L]

  # 2) Force HTTPS (respect proxy)
  RewriteCond %{HTTPS} !=on
  RewriteCond %{HTTP:X-Forwarded-Proto} !https
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

  # 3) Canonical host: www -> apex
  RewriteCond %{HTTP_HOST} ^www\.sharpensweet\.com$ [NC]
  RewriteRule ^ https://sharpensweet.com%{REQUEST_URI} [R=301,L]
</IfModule>

# Security headers
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>

# Hide backup/quarantine dirs and backup files
<IfModule mod_alias.c>
  RedirectMatch 404 ^/\.quarantine
  RedirectMatch 404 ^/\.backup
</IfModule>

<FilesMatch "\.(bak|tgz|gz|zip)$">
  Require all denied
</FilesMatch>
