  <script>
  (function () {
    function setNavOffset() {
      var nav = document.querySelector(".navbar");
      if (!nav) return;
      var h = Math.ceil(nav.getBoundingClientRect().height);
      document.documentElement.style.setProperty("--nav-h", h + "px");

      // Update Bootstrap ScrollSpy offset and refresh
      var spyEl = document.body;
      var spy = bootstrap.ScrollSpy.getInstance(spyEl);
      var opts = { target: "#mainNav", offset: h + 12 };
      if (spy) {
        spy._config = Object.assign(spy._config || {}, opts);
        spy.refresh();
      } else {
        new bootstrap.ScrollSpy(spyEl, opts);
      }
    }
    window.addEventListener("load", setNavOffset);
    window.addEventListener("resize", setNavOffset);
  })();
  </script>
